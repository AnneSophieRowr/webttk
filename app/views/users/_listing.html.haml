- if users.empty?
  = t('user.empty')

- else
  .pull-left.paginate
    = [users.total_count.to_s, t('model.user').downcase].join(" ")
    = paginate users

  %table.table.table-striped
    %tr
      %th= t('user.last_name')
      %th= t('user.first_name')
      %th= t('user.email')
      %th
    %tbody
      - users.each do |user|
        %tr{href: url_for(user)}
          %td= user.last_name
          %td= user.first_name 
          %td= user.email
          %td
            = link_to user, class: 'btn btn-default', title: t('user.show') do
              %span.fa.fa-eye
            = link_to edit_user_path(user), class: 'btn btn-default', title: t('user.edit') do
              %span.fa.fa-edit
            = link_to user_path(user), class: 'btn btn-default', title: t('user.destroy'), method: :delete, data: { confirm: t('user.confirm_destroy') } do
              %span.fa.fa-trash-o

    = paginate users
