%h2.pull-left= t('categories.list').html_safe
.bartitle
	.btn-toolbar.text-right
		.btn-group
			= link_to new_category_path, :class => 'btn', :title => t('categories.new').html_safe do
				%i.icon-plus

	.well.form-actions
		%form.form-search
			= text_field_tag :q, nil, :placeholder => t('categories.search').html_safe, :class => 'searchbar pull-left', 'data-provide' => 'typeahead', :klass => "categories"

#categories.partial
	= render :partial => 'listing', :locals => {:categories => @objects}



